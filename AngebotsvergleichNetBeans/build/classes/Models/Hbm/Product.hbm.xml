<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >
<hibernate-mapping package="Models.hbm">
    <class name="Models.Product" table="Product">
        <id name="ID" type="uuid-char"/>
        <property name="Description" type="string" column="Description"/>
        <property name="ProductNumber" type="string" column="Product_Number"/>
        <property name="Amount" type="double" column="Amount"/>
        <property name="AmountType" type="int" column="Amount_Type"/>
        <many-to-one name="productType" column="product_Type_id" 
        class="Models.ProductType" not-null="true" cascade="save-update"/>
        <many-to-one name="Company" column="Company_id" 
        class="Models.Company" not-null="true" cascade="save-update"/>
        <many-to-one name="Market" column="Market_id" not-null="true" class="Models.Market"/>
    </class>
</hibernate-mapping>